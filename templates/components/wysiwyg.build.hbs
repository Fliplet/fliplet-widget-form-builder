<textarea
  class="form-control"
  v-model.trim.lazy="$v.value.$model"
  ref="textarea"
  :name="name"
  :id="tinymceId"
  :placeholder="placeholder"
  :readonly="readonly"
></textarea>
<div
  class="ghost-tinymce"
  :class="{ 'readonly' : readonly }"
  ref="ghost"
  v-html="value"
  v-if="isInterface">
</div>
<p class="text-danger" v-if="$v.value.required === false && $v.value.$dirty">{{T "widgets.form.errors.required"}}</p>
