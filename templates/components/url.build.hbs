{{! URL field with web address input }}
<div role="group" :aria-label="'URL input for ' + (label || 'web address')" :aria-describedby="_ariaDescribedBy">
  <input
    type="url"
    class="form-control focus-outline"
    v-model.trim.lazy="$v.value.$model"
    v-on:change="updateValue()"
    v-on:input="onInput($event)"
    :name="name"
    :id="name"
    :placeholder="placeholder"
    :aria-label="_ariaLabel"
    :aria-describedby="_ariaDescribedBy"
    :aria-invalid="_ariaInvalid"
    :readonly="readonly"
    tabindex="0"
    @blur="onBlur()"
    @focus="onUrlFocus()"
  />
</div>

<p class="text-danger" v-if="$v.value.url === false && $v.value.$dirty" role="alert" aria-live="assertive">
  {{T "widgets.form.url.invalid"}}
</p>

<p class="text-danger" v-if="$v.value.required === false && $v.value.$dirty" role="alert" aria-live="assertive">
  {{T "widgets.form.errors.required"}}
</p>
