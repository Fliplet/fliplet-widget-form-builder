<div v-if="description" class="help-block description">\{{ description }}</div>
<div class="fl-matrix">
  <table>
    <thead>
      <tr>
        <th></th>
        <th v-for="(column, index) in columnOptions">{{ column.label }}</th>
      </tr>
    </thead>
    <tbody>
      <tr v-for="(row, rowIndex) in rowOptions">
        <th>{{ row.label }}</th>
        <td v-for="(column, colIndex) in columnOptions">
          <div class="radio radio-icon" :class="{ 'readonly' : readonly }">
            <input type="radio" :id="getOptionId(rowIndex, colIndex)" :name="getOptionNme(rowIndex)" :value="column.id">
            <label v-on:click="readonly ? false : clickHandler(row, column)">
              <span class="check focus-outline"
                v-on:keydown.space.prevent="readonly ? false : clickHandler(row, column)"
                @blur="onBlur()"
                tabindex="0"
              >
                <i class="fa fa-circle"></i>
              </span>
            </label>
          </div>
        </td>
      </tr>
    </tbody>
  </table>
</div>
<p class="text-danger" v-if="$v.value.required === false && $v.value.$dirty">{{T "widgets.form.errors.required"}}</p>
