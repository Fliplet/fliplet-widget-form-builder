<div v-if="description" class="help-block description">\{{ description }}</div>
<template v-if="readonly">
  <p class="form-control-static" v-html="replaceNewLines(value)"></p>
  <input
    type="hidden"
    class="form-control"
    v-model.trim.lazy="value"
    v-on:blur="updateValue()"
    v-on:input="onInput($event)"
    :name="name"
    :id="name"
    :placeholder="placeholder"
  />
</template>

<textarea v-else
  class="form-control"
  v-model.trim.lazy="value"
  v-on:blur="updateValue()"
  v-on:input="onInput($event)"
  :name="name"
  :id="name"
  :placeholder="placeholder"
  :rows="rows"
></textarea>
<p class="text-danger" v-if="$v.value.required === false && $v.value.$dirty">Field is required.</p>
