<div v-if="description" class="help-block description">\{{ description }}</div>
<input
  type="password"
  class="form-control focus-outline"
  :readonly="autogenerate"
  autocomplete="new-password"
  v-on:blur="updateValue()"
  v-on:input="onInput($event)"
  v-model.lazy="value"
  :name="name"
  :id="name"
  :placeholder="fieldPlaceholder"
  tabindex="0"
/>
<p class="text-danger" v-if="$v.value.required === false && $v.value.$dirty">Field is required.</p>
<!-- Change panel-default to panel-success when the all requirements are met -->
<div class="panel panel-default password-checker" style="margin-top: 10px; margin-bottom: 0">
  <div class="panel-heading">Password requirements</div>
  <div class="panel-body" style="padding: 15px 15px 5px 15px">
    <div class="radio radio-icon radio-success">
      <input type="checkbox" readonly tabindex="-1" />
      <label>
        <span class="check"><i class="fa fa-check"></i></span>
        Password must be at least 8 characters.
      </label>
    </div>
    <div class="radio radio-icon radio-success">
      <input type="checkbox" readonly tabindex="-1" checked />
      <label>
        <span class="check"><i class="fa fa-check"></i></span>
        Password must contain at least 1 uppercase character.
      </label>
    </div>
    <div class="radio radio-icon radio-success">
      <input type="checkbox" readonly tabindex="-1" />
      <label>
        <span class="check"><i class="fa fa-check"></i></span>
        Password must contain at least 1 lowercase character.
      </label>
    </div>
    <div class="radio radio-icon radio-success">
      <input type="checkbox" readonly tabindex="-1" />
      <label>
        <span class="check"><i class="fa fa-check"></i></span>
        Password must contain at least 1 number.
      </label>
    </div>
    <div class="radio radio-icon radio-success">
      <input type="checkbox" readonly tabindex="-1" />
      <label>
        <span class="check"><i class="fa fa-check"></i></span>
        Password must contain at least 1 symbol.
      </label>
    </div>
  </div>
</div>

<div class="form-group row clearfix" v-if="confirm">
  <br />
  <div class="col-xs-12">
    <label class="control-label" for="confirmPassword">Confirm password
      <template v-if="required">
        <span class="required-info">*</span>
      </template>
    </label>
  </div>
  <div class="col-xs-12">
    <input
      type="password"
      class="form-control focus-outline"
      v-model.lazy="passwordConfirmation"
      id="confirmPassword"
      autocomplete="new-password"
      v-on:blur="updatePasswordConfirmation()"
      v-on:input="onPasswordConfirmationInput($event)"
      tabindex="0"
    />
    <p class="text-danger" v-if="$v.passwordConfirmation.sameAs === false && $v.passwordConfirmation.$dirty">Password confirmation does not match password.</p>
  </div>
</div>

<div class="panel panel-default password-checker" style="margin-top: 10px; margin-bottom: 0">
  <div class="panel-heading">Password confirmation</div>
  <div class="panel-body" style="padding: 15px 15px 5px 15px">
    <div class="radio radio-icon radio-success">
      <input type="checkbox" readonly tabindex="-1" />
      <label>
        <span class="check"><i class="fa fa-check"></i></span>
        Password confirmation must match.
      </label>
    </div>
  </div>
</div>
