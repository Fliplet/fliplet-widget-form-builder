<div class="email-group" role="group" :aria-label="'Email input for ' + (label || 'email address')">
  <input
    type="email"
    class="form-control focus-outline"
    v-model.trim.lazy="$v.value.$model"
    v-on:change="updateValue()"
    v-on:input="onInput($event)"
    :name="name"
    :id="name"
    :placeholder="placeholder"
    :aria-label="_ariaLabel + ' - Email address'"
    :aria-describedby="_ariaDescribedBy"
    :aria-invalid="_ariaInvalid"
    autocomplete="email"
    tabindex="0"
    :readonly="readonly"
    @blur="onBlur()"
  />
</div>

<p class="text-danger" v-if="$v.value.email === false && $v.value.$dirty" role="alert" aria-live="assertive">
  {{T "widgets.form.email.invalid"}}
</p>

<p class="text-danger" v-if="$v.value.required === false && $v.value.$dirty" role="alert" aria-live="assertive">
  {{T "widgets.form.errors.required"}}
</p>
