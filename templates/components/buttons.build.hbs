<template v-if="showSubmit">
<button :type="submitType" class="btn btn-primary pull-right focus-outline" tabindex="0">\{{ submitValue }}</button>
</template>
<template v-if="showClear">
<button :type="clearType" class="btn btn-secondary pull-right focus-outline" @click="resetForm()" tabindex="0">\{{ clearValue }}</button>
</template>