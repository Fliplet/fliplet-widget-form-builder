<div role="group" :aria-label="'Number input for ' + (label || 'numeric value')">
  <input
    type="text"
    class="form-control focus-outline"
    v-model.trim.lazy="$v.value.$model"
    v-on:change="updateValue()"
    v-on:input="onInput($event)"
    :name="name"
    :id="name"
    :placeholder="placeholder"
    :aria-label="_ariaLabel"
    :aria-describedby="_ariaDescribedBy"
    :aria-invalid="_ariaInvalid"
    :readonly="readonly"
    tabindex="0"
    @blur="onBlur()"
    @focus="onFocus()"
  />
</div>

<p class="text-danger" v-if="$v.value.maxLength === false && $v.value.$dirty" role="alert" aria-live="assertive">
  {{T "widgets.form.number.invalidLength"}}
</p>
<p class="text-danger" v-if="$v.value.required === false && $v.value.$dirty" role="alert" aria-live="assertive">
  {{T "widgets.form.errors.required"}}
</p>
<p class="text-danger" v-if="$v.value.positive === false && $v.value.$dirty" role="alert" aria-live="assertive">
  {{T "widgets.form.number.onlyPositiveDigitsAllowed"}}
</p>
<p class="text-danger" v-if="$v.value.integer === false && $v.value.$dirty" role="alert" aria-live="assertive">
  {{T "widgets.form.number.onlyIntegerDigitsAllowed"}}
</p>
<p class="text-danger" v-if="$v.value.decimal === false && $v.value.$dirty" role="alert" aria-live="assertive">
  \{{$t("widgets.form.number.invalidDecimal", {decimals: decimals})}}
</p>
