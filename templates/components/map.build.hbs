{{! Map field with address search, location selection, and Google Maps integration }}
<div role="group" :aria-label="'Map for ' + (label || 'location selection')">
  <div class="form-group fl-address-field" ref="mapAddressLookUp" role="group" aria-label="Address search">
    <input
      type="text"
      class="form-control focus-outline"
      :placeholder="placeholder || 'Start typing your address...'"
      :readonly="readonly"
      :aria-label="_ariaLabel + ' - Address search'"
      :aria-describedby="_ariaDescribedBy"
      :aria-invalid="_ariaInvalid"
      :aria-expanded="addressSuggestions.length > 1"
      :aria-autocomplete="'list'"
      :aria-activedescendant="activeSuggestionIndex >= 0 ? 'suggestion-' + activeSuggestionIndex : ''"
      tabindex="0"
      @keydown="handleKeyDown"
      @input="handleInput"
      @focus="onFocus"
    />
    
    <ul 
      v-if="!readonly && addressSuggestions.length > 1" 
      class="google-autocomplete google-autocomplete-map"
      role="listbox"
      aria-label="Address suggestions"
    >
      <li 
        v-for="(option, index) in addressSuggestions" 
        :key="index" 
        :id="'suggestion-' + index"
        role="option"
        :aria-selected="index === activeSuggestionIndex"
        @click="selectSuggestion(option)" 
        :class="{ 'active': index === activeSuggestionIndex }"
        tabindex="0"
        @keydown="handleSuggestionKeyDown($event, option, index)"
      >
        <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" version="1.1" width="17" height="17" viewBox="0 0 256 256" xml:space="preserve" aria-hidden="true">
          <defs>
          </defs>
          <g style="stroke: none; stroke-width: 0; stroke-dasharray: none; stroke-linecap: butt; stroke-linejoin: miter; stroke-miterlimit: 10; fill: none; fill-rule: nonzero; opacity: 1;" transform="translate(1.4065934065934016 1.4065934065934016) scale(2.81 2.81)">
            <path d="M 15.514 -0.501 c -6.165 0 -11.18 5.015 -11.18 11.18 c 0 1.715 0.378 3.36 1.13 4.901 c 1.034 2.075 4.06 7.191 7.264 12.608 l 1.56 2.64 c 0.256 0.433 0.722 0.7 1.226 0.7 s 0.97 -0.266 1.226 -0.7 l 1.559 -2.638 c 3.182 -5.379 6.189 -10.463 7.243 -12.565 c 0.01 -0.018 0.02 -0.037 0.028 -0.055 c 0.746 -1.531 1.123 -3.177 1.123 -4.89 C 26.694 4.515 21.678 -0.501 15.514 -0.501 z M 15.514 14.734 c -2.453 0 -4.448 -1.995 -4.448 -4.448 s 1.996 -4.448 4.448 -4.448 s 4.448 1.996 4.448 4.448 S 17.966 14.734 15.514 14.734 z" style="stroke: none; stroke-width: 1; stroke-dasharray: none; stroke-linecap: butt; stroke-linejoin: miter; stroke-miterlimit: 10; fill: rgb(142,142,142); fill-rule: nonzero; opacity: 1;" transform=" matrix(2.81 0 0 2.81 1.4065934065934016 1.4065934065934016) " stroke-linecap="round"/>
          </g>
        </svg>
        \{{ option.label }}
      </li>
    </ul>
  </div>
</div>

<p class="text-danger" v-if="$v.value.required === false && $v.value.$dirty && !mapStatusError" role="alert" aria-live="assertive">
  {{T "widgets.form.errors.required"}}
</p>

<p class="text-danger" v-if="mapStatusError" role="alert" aria-live="assertive">
  \{{mapStatusError}}
</p>

<div class="maps">
  <div class="form-group fl-map-field maps" ref="mapField" role="application" aria-label="Interactive map">
    <div class="sending-form">
      <div class="spinner-holder animated">
        <div class="spinner-overlay"></div>
      </div>
    </div>
  </div>
</div>
