<div v-if="description" class="help-block description">\{{ description }}</div>
<template v-if="autofill === 'always' && defaultSource === 'submission'">
  Today
</template>
<template v-else>
  <div class="form-group fl-date-picker" :class="{ 'readonly' : readonly }" ref="datePicker">
    <i class="fa fa-calendar fa-fw"></i>
    <input type="date" class="form-control" :name="name" :id="name"/>
    <input type="text" class="form-control" :tabindex="readonly ? -1 : 0"/>
    <i class="fa fa-times fa-fw"></i>
  </div>
</template>
<p class="text-danger" v-if="$v.value.required === false && $v.value.$dirty">
  {{T "widgets.form.errors.required"}}
</p>
