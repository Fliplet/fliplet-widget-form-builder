{{! Telephone input field with phone number validation }}
<div role="group" :aria-label="'Telephone input for ' + (label || 'phone number')" :aria-describedby="_ariaDescribedBy">
  <input
    type="tel"
    class="form-control focus-outline"
    v-model.trim.lazy="$v.value.$model"
    v-on:change="updateValue()"
    v-on:input="onInput($event)"
    :name="name"
    :id="name"
    :placeholder="placeholder"
    :aria-label="_ariaLabel"
    :aria-describedby="_ariaDescribedBy"
    :aria-invalid="_ariaInvalid"
    :readonly="readonly"
    tabindex="0"
    @blur="onBlur()"
    @focus="onTelephoneFocus()"
    @keydown="handleTelephoneKeyDown"
  />
</div>

<p class="text-danger" v-if="$v.value.required === false && $v.value.$dirty" role="alert" aria-live="assertive">
  {{T "widgets.form.errors.required"}}
</p>
<p class="text-danger" v-if="$v.value.phone === false && $v.value.$dirty" role="alert" aria-live="assertive">
  {{T "widgets.form.telephone.instruction"}}
</p>
