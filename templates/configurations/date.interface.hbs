<div class="form-group">
  <label>Default value</label>
  <div class="input-group custom-date">
    <div class="input-group-addon">
      <i class="fa fa-calendar"></i>
    </div>
    <input class="form-control date-picker" type="text" v-model="value" placeholder="Default value" />
  </div>
</div>
<div class="form-group">
  <label>Placeholder</label>
  <input class="form-control" type="text" v-model.trim="placeholder" placeholder="Placeholder text" />
</div>
<div class="form-group">
  <div class="checkbox checkbox-icon">
    <input type="checkbox" id="readonly" name="readonly" v-model="readonly">
    <label for="readonly">
      <span class="check"><i class="fa fa-check"></i></span> Read only and cannot be edited
    </label>
  </div>
</div>
