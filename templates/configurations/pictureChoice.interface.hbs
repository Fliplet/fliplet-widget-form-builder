<div v-show="defaultValueSource === 'default'" class="picture-choice form-html">
  <div class="template-title">
    <label class="control-label">Picture choice options</label>
  </div>
  <div
    class="form-group"
    id="components-accordion"
    role="tabpanel"
    v-sortable="{ group: { name: 'items', pull: false }, scrollSensitivity: 116, scrollSpeed: 10, onUpdate: onSortItems }"
  >
    <div
      class="panel panel-default"
      v-for="(item, idx) in items"
      :key="item"
      :data-field="item"
    >
      <div class="panel-heading" role="tab">
        <h4
          class="panel-title"
          v-bind:class="{ collapsed: idx !== 0}"
          role="button"
          data-toggle="collapse"
          data-parent="#components-accordion"
          :href="'#category' + idx"
          :aria-expanded="idx === 0"
          :aria-controls="'category' + idx"
        >
          \{{item.label}}
        </h4>
        <div class="icon" v-on:click.prevent="removeAccordionItem(item)">
          <a href="#"><span class="icon-delete fa fa-trash"></span></a>
        </div>
      </div>
      <div
        :id="'category' + idx"
        class="panel-collapse collapse component"
        v-bind:class="{ in: idx === 0}"
        role="tabpanel"
      >
        <div>
          <label>Image</label>
          <img :src="item.img" class="option-image" />
        </div>
        <div>
          <label>Caption</label>
          <input
            class="form-control"
            type="text"
            v-model.trim="item.label"
            placeholder="Default Caption"
          />
        </div>
      </div>
    </div>
  </div>
  <div v-if="!items.length" class="panels-empty">
    <p><strong>Create as many list items as you want</strong><br />Click the
      button below to get started</p>
  </div>
  <div class="controls clearfix">
    <div class="btn-holder">
      <a
        href="#"
        class="btn btn-primary"
        v-on:click.prevent="addAccordionItem"
      >Add new item</a>
    </div>
  </div>
</div>