<div class="form-group">
  <label class="selectLabel">Select the folder where the files are stored.</label>
  <div class="btn btn-primary" id="select_folder" v-model="mediaFolderId" v-on:click="openFilePicker">
    <template v-if="mediaFolderId">Replace folder</template>
    <template v-else>Select a folder</template>
  </div>
  <div v-if="mediaFolderId" class="selected-folder-holder">
    <i class="fa fa-folder"></i> Selected folder: <strong>\{{ mediaFolderData.name }}</strong> - <a href="#" v-on:click.prevent="openFileManager">See files</a>
  </div>
</div>

<div v-if="!useBroadPicker" class="form-group">
  <label>Allowed file types/extensions</label>
  <input class="form-control" type="text" v-model.trim="accept" placeholder="e.g. .pdf, .docx, .jpg, .png" />
  <p class="help-block">Specify comma-separated file extensions (e.g., .pdf, .docx) or MIME types that are allowed for upload.</p>
</div>
