<div v-if="type === 'timer'" class="form-group">
  <label class="control-label">Start time</label>
  <div class="text-danger" v-if="errors.requiredField"> \{{ errors.requiredField }} </div>
  <div class="fl-timer">
    <div class="col-sm-4">
      <input type="number" name="hours" class="form-control" v-model.number="hours" min="0"/>
      <span>hours</label>
    </div>
    <div class="col-sm-4">
      <input type="number" name="minutes" class="form-control" v-model.number="minutes" min="0" max="60"/>
      <span>minutes</span>
    </div>
    <div class="col-sm-4">
      <input type="number" name="seconds" class="form-control" v-model.number="seconds" min="0" max="60"/>
      <span>seconds</span>
    </div>
  </div>
</div>

<div class="form-group">
  <label class="control-label">Autostart when form is loaded </label>
  <div class="help-block description">If autostart is not selected, user will need to activate timer with “Start” button</div>
  <div class="checkbox checkbox-icon">
    <input type="checkbox" id="autostart" name="autostart" v-model="autostart">
    <label for="autostart">
      <span class="check"><i class="fa fa-check"></i></span> Enable autostart
    </label>
  </div>
</div>