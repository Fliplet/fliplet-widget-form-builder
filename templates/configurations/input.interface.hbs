<div v-show="defaultValueSource === 'default'" class="form-group">
  <label>Default value</label>
  <input class="form-control" type="text" v-model.trim="value" placeholder="Default value" />
</div>
<div class="form-group">
  <label>Placeholder</label>
  <input class="form-control" type="text" v-model.trim="placeholder" placeholder="Placeholder text" />
</div>
<div class="form-group">
  <div class="checkbox checkbox-icon">
    <input type="checkbox" id="generate-guid" v-model="generateGuid">
    <label for="generate-guid">
      <span class="check"><i class="fa fa-check"></i></span> Have this form field act as an ID generator
    </label>
  </div>
</div>
